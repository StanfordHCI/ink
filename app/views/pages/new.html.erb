<%= form_for @session_user, :url => pages_path, :method => :POST do |f| %>
  <%= label :site_name, "Site Name*:" %><br/>
  <%= text_field_tag :site_name, @page.site_name %><br/>
  <%= label :description, "Site Description:" %><br/>
  <%= text_area_tag :description, @page.description %><br/>

  <%= fields_for :panels do |builder| %>
    <%= render 'panel_fields', :f => builder %>
  <% end %>

  <!--
    Panel Name*:<br/>
  <#%= text_field_tag :panel_name, @page.panel_name %><br/>
  Display panel name? <#%= check_box_tag :display %><br/>
  Panel Type*:<br/>
  <#% if (@page.nil?) %>
  <#% type = "visual" %>
  <#% else %>
  <#% type = @page.panel_type %>
  <#% end %>
  <#%= select_tag(:panel_type, options_for_select([["Visual element","visual"],["Select form","select"],["Info summary","info"]], type))%><br/>
  Background image:<br/>
  <#%= file_field_tag :background %><br/>
  --> 
  <%= submit_tag "Create page" %>
<% end %>
