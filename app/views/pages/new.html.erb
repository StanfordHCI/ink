<%= form_for @session_user, :url => pages_path, :method => :POST do |f| %>
  Site Name*:<br/>
  <%= text_field_tag :site_name, @page.site_name %><br/>
  Site Description:<br/>
  <%= text_area_tag :description, @page.description %><br/>

  <%= fields_for :panels do |builder| %>
    Panel Name*:<br/>
    <%= builder.text_field :panel_name %><br/>
    Display panel name? <%= builder.check_box :display %><br/>
    Panel Type*:<br/>
    <%= builder.select(:panel_type, options_for_select([["Visual element","visual"],["Select form","select"],["Info summary","info"]], "visual"))%><br/>
    Background image:<br/>
    <%= builder.file_field :background %><br/>
  <% end %>

