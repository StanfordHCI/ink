<p class="panel_fields">
  <%= p.label :panel_name, "Panel Name*:" %><br/>
  <%= p.text_field :panel_name %><br/>
  <%= p.label :display, "Display panel name?" %>
  <%= p.check_box :display %><br/>
  <%= p.label :panel_type, "Panel Type*:" %><br/>
  <%= p.select(:panel_type, options_for_select([["Visual element","visual"],["Select form","select"],["Info summary","info"]], "visual"))%><br/>
  <%= p.label :background, "Background image:" %><br/>
  <%= p.file_field :background %><br/>
  <%= p.hidden_field :_destroy, id: "destroy" %>
  <%= link_to_function "Remove this panel", "remove_fields(this)" %>  
</p>
