<%= form_for @page do |f| %>
  <div id="site_info">
    <%= f.label :site_name, "Site Name*:" %><br/>
    <%= f.text_field :site_name %><br/>
    <%= f.label :description, "Site Description:" %><br/>
    <%= f.text_area :description %><br/>
    <%= f.check_box :display_description %>
    <%= f.label :display_description, "Display description on page?" %><br/>
  </div>

  <%= f.fields_for :text_panels do |builder| %>
    <%= render 'text_panel_fields', f: builder %>
  <% end %>
  <%= f.fields_for :pictures do |builder| %>
    <%= render 'picture_fields', f: builder %>
  <% end %>
  <%= f.fields_for :s_selectpanels do |builder| %>
    <%= render 's_selectpanel_fields', f: builder %>
  <% end %>
  <%= f.fields_for :m_selectpanels do |builder| %>
    <%= render 'm_selectpanel_fields', f: builder %>
  <% end %>

  <table id="menu">
    <td><%= link_to_add_fields "text.png", f, :text_panels %></td>
    <td><%= link_to_add_fields "picture.png", f, :pictures %></td>
    <td><%= link_to_add_fields "single.png", f, :s_selectpanels %></td>
    <td><%= link_to_add_fields "multi.png", f, :m_selectpanels %></td>  
  </table>
  
  <div id="panel_button">
    <%= link_to("Add a panel", "#", class: "add_panel") %>
  </div>

  <div id="submit"> <%= f.submit "Create page" %></div>
<% end %>
