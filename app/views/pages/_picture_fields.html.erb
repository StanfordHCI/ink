<span class="input-group-addon">
  <%= f.label :panel_name, "Panel Name*:" %><br/>
  <%= f.text_field :panel_name %><br/>
  <%= f.check_box :display %>
  <%= f.label :dislay, "Display panel name?"%><br/>
  <%= f.label :info, "Panel Info:"%><br/>
  <%= f.text_area :info %><br/>
  <%= f.label :photo, "Upload file*: " %>
  <%= f.file_field :photo %><br/>

  <div id="tags<%= panel_id %>">
    Panel present when user selects...
    <%= f.fields_for :tags do |builder| %>
      <%= render 'tag_fields', f: builder %>
    <% end %>

    <!--
    <#% if !(@options.nil?) %>
      <#% for option in @options %>
        <#%= add_tags f, :tags, option %>
        <#%= option %>
      <#% end %>
    <#% end %>
    -->
  </div>

  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", "#", class: "remove_fields" %>
</span>
