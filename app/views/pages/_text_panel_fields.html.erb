<fieldset>
  <%= f.label :panel_name, "Panel Name*:" %><br/>
  <%= f.text_field :panel_name %><br/>
  <%= f.check_box :display %>
  <%= f.label :display, "Display panel name?" %><br/>
  <%= f.label :info, "Content*:" %><br/>
  <%= f.text_area :info %><br/>

  <% if !(@options.nil?) %>
    <div class="tags">
      Panel present when user selects...
      <% for option in @options %>
        <%= add_tags f, :tags, option %>
        <%= option %>
      <% end %>
    </div>
  <% end %>

  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", "#", class: "remove_fields" %>
</fieldset>
