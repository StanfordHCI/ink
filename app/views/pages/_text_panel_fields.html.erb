<fieldset>
  <%= f.label :panel_name, "Panel Name*:" %><br/>
  <%= f.text_field :panel_name %><br/>
  <%= f.check_box :display %>
  <%= f.label :display, "Display panel name?" %><br/>
  <%= f.label :info, "Content*:" %><br/>
  <%= f.text_area :info %><br/>

  <% if !(@options.nil?) %>
    <% for option in @options %>
      <%= option %>
    <% end %>
  <% end %>

  <%= f.hidden_field :_destroy %>
  <div class="remove"><%= link_to "remove", "#", class: "remove_fields" %></div>
</fieldset>
