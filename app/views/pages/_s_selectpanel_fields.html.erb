<span class="input-group-addon">
  <%= f.label :panel_name, "Panel Name*:" %><br/>
  <%= f.text_field :panel_name %><br/>
  <%= f.check_box :display %>
  <%= f.label :display, "Display panel name?" %><br/>
  <%= f.label :info, "User Prompt*:" %><br/>
  <%= f.text_area :info %><br/>
  <%= f.fields_for :options do |builder| %>
    <%= render 'option_fields', f: builder, panel_id: panel_id %>
  <% end %>
  <%= link_to_add_option "Add option", f, :options, panel_id %>


  <div id="tags<%= panel_id %>">
    <% if !((@page.panels.last).nil?) && (panel_id <= @page.panels.last.id)%>
      <% panel=Panel.find(panel_id) %>
      Panel present when user selects...
      <% for option in panel.tags %>
        <%= f.fields_for :tags, option, child_index: option.id  do |builder| %>
          <%= render 'tag_fields', f: builder, option_name: option.name %>
        <% end %>
      <% end %>
    <% else %>
      <% if !(@options.nil?) %>
        <% for option in @options %>
          <%= add_tags f, :tags, option %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", "#", class: "remove_fields" %>

</span>
